generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @default(uuid()) @map("session_token")
  address      String   @unique
  expiresAt    DateTime @map(name: "expires_at")
  user         User     @relation(fields: [address], references: [address], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id        String    @id @default(uuid())
  address   String    @unique
  ens       String?
  createdAt DateTime  @default(now()) @map(name: "created_at")
  posts     Post[]
  sessions  Session[]

  @@map(name: "users")
}

model Project {
  id              String  @id @default(uuid())
  projectName     String  @map(name: "project_name")
  description     String  @default("")
  contractAddress String  @unique @map(name: "contract_address")
  ownerAddress    String  @unique @map(name: "owner_address")
  likes           Int     @default(0)
  dislikes        Int     @default(0)
  imageUrl        String? @default("") @map(name: "image_url")
  bannerUrl       String? @default("") @map(name: "banner_url")
  posts           Post[]

  @@map(name: "projects")
}

model Post {
  postId    String   @id @default(uuid()) @map("post_id")
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String   @default(uuid()) @map("author_id")
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String   @default(uuid()) @map("project_id")
  title     String
  content   String
  likes     Int      @default(0)
  dislikes  Int      @default(0)
  createdAt DateTime @default(now()) @map(name: "created_at")

  @@map(name: "posts")
}
